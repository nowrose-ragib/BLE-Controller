<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DGuardsBackup" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_night</item>
        <item name="colorPrimaryVariant">@color/primary_night</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_night</item>
        <item name="colorSecondaryVariant">@color/primary_night</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background. -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Text colors -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <!-- Status bar style. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navigation bar style. -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <!-- Toolbar theme -->
        <item name="toolbarStyle">@style/Theme.DGuardsBackup.ToolBarTheme</item>
        <item name="actionOverflowButtonStyle">@style/Theme.DGuardsBackup.ToolBarTheme.OverFlowButtonStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/Theme.DGuardsBackup.ToolBarTheme.NavigationButtonStyle</item>
    </style>

    <style name="Theme.DGuardsBackup.ToolBarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/Theme.DGuardsBackup.ToolBarTheme.TitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/Theme.DGuardsBackup.ToolBarTheme.SubtitleTextAppearance</item>
    </style>
    <style name="Theme.DGuardsBackup.ToolBarTheme.TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme.DGuardsBackup.ToolBarTheme.SubtitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Theme.DGuardsBackup.ToolBarTheme.NavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/primary_night</item>
    </style>
    <style name="Theme.DGuardsBackup.ToolBarTheme.OverFlowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/primary_night</item>
    </style>
</resources>